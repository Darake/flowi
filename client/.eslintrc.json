{
  "env": {
    "browser": true,
    "jest": true
  },
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "jsx-a11y/label-has-associated-control": [
      2,
      {
        "controlComponents": ["Field"]
      }
    ],
    "jsx-a11y/label-has-for": "off"
  }
}
